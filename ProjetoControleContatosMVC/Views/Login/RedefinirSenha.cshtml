@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefiniir senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="EnviarLinkRedefinirSenha" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class=" form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="d-grid gap-3">
        <button type="submit" class="btn btn-danger btn-block">Redefinir senha</button>
        <a class="btn btn-danger btn-block" asp-controller="Index" asp-action="Login" role="button">Retornar</a>
    </div>
</form>